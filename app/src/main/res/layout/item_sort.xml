<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_pressed_bg">
    <TextView
        android:id="@+id/shop_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_main_color"
        android:paddingTop="@dimen/auto_space"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/auto_space"
        android:text="零食"
        android:gravity="center"/>

    <TextView
        android:id="@+id/shop_count"
        android:layout_width="@dimen/fab_margin"
        android:layout_height="@dimen/fab_margin"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginRight="@dimen/small_space"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="@dimen/text_size_small"
        android:background="@drawable/notice_bg"
        android:text="22"/>
</RelativeLayout>