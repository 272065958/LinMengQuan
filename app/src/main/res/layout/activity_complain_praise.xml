<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/auto_space"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/praise_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/auto_space"
            android:background="@drawable/main_frame_bg"
            android:paddingTop="@dimen/auto_space"
            android:paddingBottom="@dimen/auto_space"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin"
            android:onClick="praise"
            android:text="表扬" />

        <TextView
            android:id="@+id/complain_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/auto_space"
            android:background="@drawable/black_frame_bg"
            android:paddingTop="@dimen/auto_space"
            android:paddingBottom="@dimen/auto_space"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin"
            android:onClick="complain"
            android:text="投诉" />

    </LinearLayout>

    <include layout="@layout/item_divider" />

    <EditText
        android:id="@+id/order_finish_remark"
        style="@style/content_area_style"
        android:layout_marginTop="@dimen/auto_space"
        android:background="@android:color/white"
        android:hint="请简单描述事情时间地点人物和经过"
        android:paddingBottom="@dimen/auto_space"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        android:paddingTop="@dimen/auto_space" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/bottom_button" />
</LinearLayout>