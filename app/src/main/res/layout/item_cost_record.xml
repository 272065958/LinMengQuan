<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="@dimen/auto_space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/image_size"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="时间"
            android:textColor="@color/text_second_color" />

        <TextView
            android:id="@+id/record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/auto_space"
            android:textColor="@color/text_deep_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/middle_space"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/image_size"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="物业"
            android:textColor="@color/text_second_color" />

        <TextView
            android:id="@+id/record_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/auto_space"
            android:textColor="@color/text_deep_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/middle_space"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/image_size"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="缴费月份"
            android:textColor="@color/text_second_color" />

        <TextView
            android:id="@+id/record_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/auto_space"
            android:textColor="@color/text_deep_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/middle_space"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/image_size"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="缴费金额"
            android:textColor="@color/text_second_color" />

        <TextView
            android:id="@+id/record_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/auto_space"
            android:textColor="@color/notice_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/middle_space"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/image_size"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="缴费人"
            android:textColor="@color/text_second_color" />

        <TextView
            android:id="@+id/record_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/auto_space"
            android:textColor="@color/text_deep_color" />
    </LinearLayout>
</LinearLayout>