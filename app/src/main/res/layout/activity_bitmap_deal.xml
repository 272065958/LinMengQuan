<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <net.kamfat.omengo.component.BitmapDealView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/action_back"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginLeft="@dimen/auto_space"
        android:onClick="onClick"
        android:padding="@dimen/auto_space"
        android:src="@drawable/ic_blue_back" />

    <ImageView
        android:id="@+id/action_return"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/auto_space"
        android:onClick="onClick"
        android:padding="@dimen/auto_space"
        android:src="@drawable/ic_blue_return" />

    <TextView
        android:id="@+id/deal_finish_button"
        style="@style/button_bottom_style"
        android:layout_alignParentBottom="true"
        android:onClick="onClick"
        android:text="@string/button_sure" />
</RelativeLayout>