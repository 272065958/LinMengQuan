<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_pressed_bg"
    android:padding="@dimen/small_space"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/goods_image"
        android:layout_width="@dimen/goods_size"
        android:layout_height="@dimen/goods_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/middle_space"
        android:layout_toRightOf="@id/goods_image"
        android:layout_marginRight="@dimen/middle_space"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/goods_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_main_color"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_middle"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/notice_color"
            android:textSize="@dimen/text_size_small"
            android:layout_marginTop="@dimen/middle_space"/>

<!--        <TextView
            android:id="@+id/goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/text_size_small"
            android:layout_marginTop="@dimen/middle_space" />-->

        <include
            android:id="@+id/shop_count_view"
            layout="@layout/item_shop_count_edit"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/goods_rebate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/notice_color"
        android:paddingLeft="@dimen/middle_space"
        android:paddingRight="@dimen/middle_space"
        android:paddingTop="@dimen/small_space"
        android:paddingBottom="@dimen/small_space"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:text="折扣"/>

</RelativeLayout>