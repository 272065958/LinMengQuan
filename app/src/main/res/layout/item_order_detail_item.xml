<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/auto_space">

    <ImageView
        android:id="@+id/shop_detail_photo"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/auto_space"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shop_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="@dimen/text_size_middle"
            android:text="商品名字"
            android:layout_marginBottom="@dimen/middle_space"
            android:textColor="@color/text_main_color"/>

        <TextView
            android:id="@+id/shop_detail_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/normal_space"
            android:textColor="@color/text_second_color"
            android:textSize="@dimen/text_size_small"
            android:layout_below="@id/shop_detail_title"
            android:text="×2"/>

        <TextView
            android:id="@+id/shop_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥30.60"
            android:layout_toLeftOf="@id/shop_detail_count"
            android:layout_below="@id/shop_detail_title"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_second_color"/>
    </RelativeLayout>
</LinearLayout>