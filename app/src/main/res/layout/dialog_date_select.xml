<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pick_comfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/item_transparent_pressed_bg"
        android:padding="@dimen/auto_space"
        android:text="@string/button_sure"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_middle"
        android:textStyle="bold" />

    <View
        android:id="@+id/pick_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_space"
        android:layout_below="@id/pick_comfirm"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pick_line"
        android:orientation="horizontal">

        <net.kamfat.omengo.component.NumberPickerView
            android:id="@+id/year_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:visibility="gone" />

        <net.kamfat.omengo.component.NumberPickerView
            android:id="@+id/month_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:visibility="gone" />

        <net.kamfat.omengo.component.NumberPickerView
            android:id="@+id/day_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:visibility="gone" />

        <net.kamfat.omengo.component.NumberPickerView
            android:id="@+id/hour_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:visibility="gone" />

        <net.kamfat.omengo.component.NumberPickerView
            android:id="@+id/minute_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>